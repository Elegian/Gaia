<Window x:Class="Gaia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="900" Width="900">
    <Grid>
        <TabControl x:Name="tabControl" Margin="180,86,0.6,35.4"/>
        <TreeView x:Name="treeView" Margin="0,86,0,35.4" HorizontalAlignment="Left" Width="180"/>
        <StatusBar Height="35" Margin="0,0,0.6,0.4" VerticalAlignment="Bottom"/>
        <TabControl x:Name="tabControl1" HorizontalAlignment="Left" Height="86" VerticalAlignment="Top" Width="884">
            <TabItem Header="Start" FontSize="15" >
                <Grid Height="Auto" Width="Auto" Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Datei" FontSize="15">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Ablaufsteuerung" FontSize="15">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Kompilieren" FontSize="15">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Methoden" FontSize="15">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Hilfe" FontSize="15">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
