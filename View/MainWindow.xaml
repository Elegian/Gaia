                    <RibbonButton  Label="Test" Height="55" Width="55" LargeImageSource="/Images/GNU.svg.png"/>
                    <RibbonButton  Label="Test" Height="55" Width="55" LargeImageSource="/Images/GNU.svg.png"/>
                    <RibbonButton  Label="Test" Height="55" Width="55" LargeImageSource="/Images/GNU.svg.png"/>
                </RibbonGroup>
            </RibbonTab>
            <RibbonTab Header="Kompilieren"/>
            <RibbonTab Header="Programmieren"/>
            <RibbonTab Header="Hilfe"/>
        </Ribbon>
    </Grid>
</Window>
